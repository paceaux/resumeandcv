/*====================
    GLOBAL COMPONENTS
====================*/

 /*==========
    #GlOBAL #HEADER
 ==========*/
/*=== g-header ===
    __hgroup
    __title
    __titleLink
    __subtitle
    __element
*/

.g-header,
.g-footer {
    display: grid;
    grid-template-columns: repeat(var(--globalColumns), auto);
    grid-template-rows: auto auto;
}

.g-header {
    grid-template-areas: "branding branding branding" "nav nav nav";
    --biggestTitleSize: 2.2rem;
}

.g-header__hgroup {
    grid-area: branding;
}

.g-nav {
    grid-area: nav;
}

.g-header__title {
    line-height: 1;
    padding: 5px 10px;
    border: 5px solid;
    margin-bottom: 0;
}

.g-header__subtitles {
    --subTitleHeight: calc(var(--biggestTitleSize) * 1.2);
    --subtTitleCount: 5;
    --subTitleAnimationDelay: 4s;
    height: var(--subTitleHeight);
    overflow: hidden;
}

vendors = official;

@keyframes subtitleFadeInOut {
    0% {
        color: rgba(0,0,0,0.01);
    }

    50% {
        color: rgba(colorBaseDarkest, colorBaseDarkest, colorBaseDarkest, 1);
    }

    100% {
        color: rgba(0,0,0,0.01);
    }
}

@keyframes subtitleSlideUp {

    from {
        transform: translateY(0);
    }
    to {
        transform: translateY(calc(0em - (var(--bigTitleSize)  * var(--subtTitleCount))));
    }
}
.g-header__subtitleList {
    display: block;
    animation-name: subtitleSlideUp;
    animation-delay: var(--subTitleAnimationDelay);
    animation-duration: calc(var(--subTitleAnimationDelay) * var(--subtTitleCount));
    animation-iteration-count: 1;
    animation-timing-function: steps(var(--subtTitleCount), jump-start);
    animation-fill-mode: backwards;
    animation-direction: alternate;
}

.g-header__subtitle {
    display: block;
    height: var(--subTitleHeight);
    text-align: center;    
    animation-name: subtitleFadeInOut;
    animation-duration: var(--subTitleAnimationDelay)
    animation-iteration-count: var(--subtTitleCount);
    animation-timing-function: ease-out;
}

.g-header__titleLink {  
    color: inherit;

    &:hover, &:focus, &:active {
        border-bottom: transparent
    }
}

@media screen and (min-width: 768px) {
    .g-header {
        grid-template-areas: "branding . nav" "branding . nav";
    }

    .g-header__subtitle {
        text-align: left;    
    }
}

 /*==========
    #GlOBAL #NAV
 ==========*/

/*=== g-nav ===
    __list
    __listItem
    __listItemLink
    
*/

.g-nav__list {
    display: flex;
    flex-wrap: wrap;
    justify-content: space-evenly;
    margin-right: 1rem;
    list-style: none;
    padding: 0;
}


.g-nav__listItem {
    text-align: right;
    line-height: 1;
    margin: .618em 1rem 0 0;
}

@media screen and (min-width: 768px) {
    .g-nav__list {
        display: block;    
    }

    .g-nav__listItem {
        margin: 0 0 .2em 0;
    }
}


/*===============
   #GLOBAL #FOOTER
===============*/

/*=== g-footer ===
    __legal
    __links
    __link
    __element
    __element
    
*/

.g-footer {
    border-top: 1px solid #d8d8d8;
    grid-template-areas: "legal legal legal" ". links .";
}

.g-footer__legal {
    grid-area: legal;
    text-align: center;
}

.g-footer__links {
    grid-area: links;
    display: flex;
    justify-content: space-evenly;
}

.g-footer__link {
    font-size: .618em;
}


@media screen and (min-width: 768px) {
    .g-footer {
        grid-template-areas: "legal . links" ". . .";
    }

    .g-footer__legal {
        text-align: left;
    }
    .g-footer__links {
        align-items: center;
        justify-content: flex-end;
    }
}
/*===============
    #GlOBAL #MAIN
===============*/

.g-main {
    animation-name: fadein;
    animation-duration: .75s;
    animation-iteration-count: 1
    animation-timing-function: ease-in;
    animation-direction: linear;
}

.g-main {
    flex-direction: column;
}