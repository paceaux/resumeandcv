/*===============
    #icon
===============*/

.icon {
    &::before {
        content: ' ';
        display: inline-block;
        vertical-align: -.75em;
        line-height: 1;
        width: 2em;
        height: 2em;
        margin-right: .618em;
        background-repeat: no-repeat;
    }
}