<!DOCTYPE html>
<html>
    <head>
        <meta charset="utf-8" />
        <meta http-equiv="x-ua-compatible" content="edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <title>{{title}} | {{content.global.site-title}}</title>
        <meta name="description" content="{{description}}" />
        <meta name="keywords" content="{{keywords}}" />
        {{#if ishomepage}}
        <meta name="google-site-verification" content="{{content.google.siteverification}}" /> 
        {{/if}}
        <link href="/assets/css/main.css" rel="stylesheet"/>
    </head>
<body>
    {{> header}}
    <main class="g-main" role="main">
        {{#if subnavigation}}
            {{>subNav (lookup content.navigations subnavigation) }}
        {{/if}}
        {% body %}
    </main>
    {{> footer}}

    <script type="text/javascript" src="/assets/js/main.js"></script>
        {{#if content.google.analytics}}
            <script>
                (function(i,s,o,g,r,a,m){i['GoogleAnalyticsObject']=r;i[r]=i[r]||function(){
                (i[r].q=i[r].q||[]).push(arguments)},i[r].l=1*new Date();a=s.createElement(o),
                m=s.getElementsByTagName(o)[0];a.async=1;a.src=g;m.parentNode.insertBefore(a,m)
                })(window,document,'script','https://www.google-analytics.com/analytics.js','ga');

                ga('create', '{{content.google.analytics}}', 'auto');
                ga('send', 'pageview');

            </script>
        {{/if}}
</body>
